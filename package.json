{
  "name": "plurishing-backend",
  "version": "0.0.1",
  "description": "Backend handling multimodal publishing",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robindemourat/plurishing-backend.git"
  },
  "author": "Robin de Mourat <robin.demourat@gmail.com> (https://github.com/robindemourat)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/robindemourat/plurishing-backend/issues"
  },
  "homepage": "https://github.com/robindemourat/plurishing-backend#readme",
  "engines": {
    "node": ">=9.2.0"
  },
  "scripts": {
    "dev": "better-npm-run dev",
    "start": "pm2 start ecosystem.config.js -i max --attach",
    "monitor": "pm2 monit",
    "lint": "eslint src tests server",
    "lint:fix": "npm run lint -- --fix",
    "populate-db": "better-npm-run populate-db",
    "populate-db:dev": "better-npm-run populate-db-dev",
    "test": "cross-env NODE_ENV=test mocha --compilers js:babel-core/register --R  spec --recursive $(find src -name '*.spec.js')",
    "test:watch": "npm run test -- --watch",
    "cov": "cross-env NODE_ENV=test nyc npm test && nyc check-coverage --lines 0 --functions 0 --branches 0n && nyc report --reporter=text-lcov",
    "doc": "esdoc -c esdoc.json",
    "build": "babel src/ -d build/",
    "add-build-to-stage": "git add build",
    "add-doc-to-stage": "git add doc",
    "deploy:heroku": "node setHerokuEnv;git push heroku master"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon src/server.js  --exec babel-node --config nodemon.json",
      "env": {
        "DEBUG": "app:*",
        "NODE_ENV": "development"
      }
    },
    "populate-db": {
      "command": "node build/utils/populateDb.js",
      "env": {
        "DEBUG": "app:*",
        "NODE_ENV": "maintenance"
      }
    },
    "populate-db-dev": {
      "command": "babel-node src/utils/populateDb.js",
      "env": {
        "DEBUG": "app:*",
        "NODE_ENV": "development"
      }
    }
  },
  "pre-commit": [
    "lint",
    "cov",
    "build",
    "doc",
    "add-doc-to-stage",
    "add-build-to-stage"
  ],
  "dependencies": {
    "ajv": "^5.5.2",
    "axios": "^0.17.1",
    "babel-runtime": "^6.3.19",
    "bcrypt": "^1.0.3",
    "better-npm-run": "0.0.9",
    "bluebird": "^3.5.1",
    "bunyan-debug-stream": "^1.0.8",
    "cors": "^2.8.1",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "express-bunyan-logger": "^1.3.2",
    "express-promise": "^0.4.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fb": "^2.0.0",
    "formidable": "^1.1.1",
    "fs-extra": "^5.0.0",
    "json-schema-defaults": "^0.3.0",
    "json-schema-ref-parser": "^4.0.4",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.16.1",
    "lodash-addons": "^0.3.1",
    "mime-types": "^2.1.17",
    "nano": "^6.4.2",
    "nodemailer": "^4.4.1",
    "plurishing-schemas": "git+https://github.com/robindemourat/plurishing-schemas.git",
    "plurishing-shared": "git+https://github.com/robindemourat/plurishing-shared.git",
    "pm2": "^2.8.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "twit": "^2.2.9",
    "uuid": "^3.1.0",
    "webshot": "^0.18.0"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.3.17",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-loader": "^6.2.0",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "esdoc": "^1.0.4",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-publish-markdown-plugin": "^1.0.0",
    "eslint": "^2.13.1",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^1.3.1",
    "istanbul": "^0.4.5",
    "mocha": "^2.2.5",
    "nodemon": "^1.8.1",
    "nyc": "^11.2.1",
    "pre-commit": "^1.2.2",
    "webpack": "^1.12.14"
  }
}
